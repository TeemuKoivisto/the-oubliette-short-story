% Reduce overfull \hbox{} warnings
\sloppy

% Contents page
\usepackage[titles]{tocloft}
\renewcommand{\cftchapfont}{\large\itshape}
\renewcommand{\cftchappagefont}{\normalfont}
\renewcommand{\numberline}[1]{}

% chapter headings
\renewcommand\thechapter{\Roman{chapter}}
\usepackage[center,sc]{titlesec}
% Hack to remove chapter headers with an eye-balled negative vertical margin
\titleformat{\chapter}[display]
  {}{\vspace{-1cm}}{0pt}{\filcenter\Huge\scshape}

% headers/footers
\usepackage{fancyhdr} % Permits header customization. See header section below.
%\setlength{\headheight}{15pt}
%\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt} % No underline in the page header
\fancyhf[CFE,CFO]{\footnotesize\thepage} % Set page numbers in the footer
\fancyhead[CE]{\scriptsize\scshape\thechapter} % Chapter number in middle of left-side page header
\fancyhead[CO]{\scriptsize\scshape\booktitle} % Book title in middle of right-side page header
